{
  "name": "ross",
  "version": "0.1.0",
  "description": "Restaurant Ordering System with Serverless.",
  "private": true,
  "scripts": {
    "sls": "serverless",
    "tsc": "npm run api:tsc",
    "infra:deploy": "cd ./services/infra && STAGE=${STAGE:=dev} && sls deploy -s $STAGE",
    "api:tsc": "cd ./services/rest-api && tsc -w",
    "api:dotenv": "cd ./services/rest-api && STAGE=${STAGE:=dev} && sls export-env -s $STAGE",
    "api:deploy": "cd ./services/rest-api && STAGE=${STAGE:=dev} && sls deploy -s $STAGE",
    "api:deploy-test": "npm run api:deploy && npm run api:dotenv && npm run test-e2e",
    "env": "npm run api:dotenv",
    "test": "npm run test-unit",
    "test-unit": "cd ./services/rest-api && jest -c jest.config.unit.js",
    "test-integration": "cd ./services/rest-api && TEST_MODE=LOCAL_HANDLER jest -c jest.config.integration.js -t '^(?!.*(\\[e2e\\])).*$'",
    "test-e2e": "cd ./services/rest-api && TEST_MODE=REMOTE_TRIGGER jest -c jest.config.e2e.js -t '^(?!.*(\\[integration\\])).*$'",
    "test-all": "npm run test-unit && npm run test-integration && npm run test-e2e",
    "slsdt": "sls-dev-tools"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sorenandersen/ross.git"
  },
  "author": "SÃ¸ren Andersen",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.66",
    "@types/faker": "^5.1.5",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.12",
    "@types/serverless": "^1.78.15",
    "@types/uuid": "^8.3.0",
    "aws-testing-library": "^1.1.1",
    "faker": "^5.1.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "serverless": "^2.15.0",
    "serverless-export-env": "^1.4.0",
    "serverless-iam-roles-per-function": "^3.0.1",
    "serverless-webpack": "^5.3.5",
    "sls-dev-tools": "^1.1.11",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.12",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.2",
    "webpack": "^5.10.0"
  },
  "dependencies": {
    "@aws/dynamodb-auto-marshaller": "^0.7.1",
    "@dazn/lambda-powertools-logger": "^1.28.0",
    "uuid": "^8.3.2"
  }
}
