{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "types": [
      "jest",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    ".serverless",
    ".webpack",
    "dist"
  ]
}